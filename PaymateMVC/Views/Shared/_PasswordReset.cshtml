@model PaymateMVC.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header" style="font-weight:700;color:limegreen">Password Reset Confirmed<a href="/Home/Index"><i class="fa fa-home fa-2x pull-right" aria-hidden="true"></i></a></div>
        <div class="card-body" style="text-align:center">
            Hi, a reset code has been sent to <b>@ViewBag.EmailToReset</b>. Please check your email and enter the code below.
            <br /><br />
            @using (Html.BeginForm("ResetPassword", "Security", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.PasswordResetSecurityCode)
                    @Html.TextBoxFor(m => m.PasswordResetSecurityCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PasswordResetSecurityCode, null, new { @class = "text-danger" })
                </div>
                <input type="submit" name="ResetPassword" value="Reset Password" class="btn btn-success form-control" id="reg-log-button" />
            }
        </div>
    </div>
</div>
