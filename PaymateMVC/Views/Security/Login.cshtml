@model PaymateMVC.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}
@Html.Partial("_Loader", "page-spinner")
@using (Html.BeginForm("Login", "Security", new { ReturnUrl = ViewBag.returnURL }, FormMethod.Post, new { id = "reg-log-form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login<a href="/Home/Index"><i class="fa fa-home fa-2x pull-right" aria-hidden="true"></i></a></div>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.CustomerEmailAddress)
                    @Html.TextBoxFor(m => m.CustomerEmailAddress, new { placeholder = "example@example.com", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CustomerEmailAddress, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CustomerPassword)
                    @Html.PasswordFor(m => m.CustomerPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CustomerPassword, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox"> Remember Password
                        </label>
                    </div>
                </div>
                <input type="submit" name="Login" value="Login" class="btn btn-success form-control" id="reg-log-button" />
                <div class="text-center">
                    @Html.ActionLink("Register an Account", "Register", "Security", null, null)
                    @Html.ActionLink("Forgot Password?", "ForgotPassword", "Security", null, new { @class = "d-block small" })
                </div>
            </div>
        </div>
    </div>
}




