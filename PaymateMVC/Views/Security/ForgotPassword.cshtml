@model PaymateMVC.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="container">
    @Html.Partial("_Loader", "page-spinner")
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Reset Password</div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>Forgot your password?</h4>
                <p>Enter your email address and we will send you instructions on how to reset your password.</p>
            </div>
            @using (Html.BeginForm("ForgotPassword", "Security", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.CustomerEmailAddress, null, new { @class = "form-control btn-block col-md-12", placeholder = "Enter email address" })
                    @Html.ValidationMessageFor(m => m.CustomerEmailAddress, null, new { @class = "text-danger" })
                </div>
                <input type="submit" class="btn btn-primary btn-block col-md-12" value="Reset Password" />
            }
            <div class="text-center">
                @Html.ActionLink("Register an Account", "Register", "Security", null, new { @class = "d-block small mt-3" })
                @Html.ActionLink("Login Page", "Login", "Security", null, new { @class = "d-block small" })
            </div>
        </div>
    </div>
</div>
